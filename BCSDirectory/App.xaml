<Application x:Class="BCSDirectory.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BCSDirectory"
             StartupUri="MainWindow/MainWindow.xaml">
    <Application.Resources>
         <ResourceDictionary>
             <ResourceDictionary.MergedDictionaries>
                 <ResourceDictionary Source="Resource/Colors.xaml"/>
                 <ResourceDictionary Source="Resource/Images.xaml"/>
                 <ResourceDictionary Source="Resource/Fonts.xaml"/>
                 <ResourceDictionary Source="Resource/MenuStyle.xaml"/>
                 <ResourceDictionary Source="Resource/Converters.xaml"/>
            </ResourceDictionary.MergedDictionaries>
         </ResourceDictionary>
    </Application.Resources>
</Application>
